<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="categoryDetail"
            type="com.abdullah.e_commerce.model.CategoryDetails" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categories_item_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <ImageView
                android:id="@+id/categories_item_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/apparel_image"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/categories_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintTop_toBottomOf="@+id/categories_item_iv"
                app:layout_constraintStart_toStartOf="@+id/categories_item_iv"
                app:layout_constraintEnd_toEndOf="@+id/categories_item_iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>