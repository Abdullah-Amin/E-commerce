    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FilterDialogFragment"
        style="@style/Theme.PlayCore.Transparent"
        android:foregroundGravity="left">

        <LinearLayout
