<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F6F8">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/product_added_to_cart_item_item_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/shoes_image"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/product_added_to_cart_item_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product name"
            android:textColor="#515C6F"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="@+id/product_added_to_cart_item_item_image"
            app:layout_constraintStart_toEndOf="@+id/product_added_to_cart_item_item_image"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp" />

        <TextView
            android:id="@+id/product_added_to_cart_item_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product name"
            android:textColor="#99515C6F"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toBottomOf="@+id/product_added_to_cart_item_item_name"
            app:layout_constraintStart_toEndOf="@+id/product_added_to_cart_item_item_image"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp" />

        <TextView
            android:id="@+id/product_added_to_cart_item_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3434"
            android:textColor="#FF6969"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/product_added_to_cart_item_item_details"
            app:layout_constraintStart_toEndOf="@+id/product_added_to_cart_item_item_image"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp" />

        <LinearLayout
            android:id="@+id/checkout_activity_item_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/product_added_to_cart_item_item_details"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/_15sdp">

            <ImageView
                android:id="@+id/product_added_to_cart_item_item_remove_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove"
                app:layout_constraintTop_toBottomOf="@+id/product_added_to_cart_item_item_price"
                app:layout_constraintStart_toEndOf="@+id/product_added_to_cart_item_item_image"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/product_added_to_cart_item_item_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/_14ssp"
                android:textColor="#727C8E"
                app:layout_constraintTop_toBottomOf="@+id/product_added_to_cart_item_item_price"
                app:layout_constraintStart_toEndOf="@+id/product_added_to_cart_item_item_remove_iv"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/product_added_to_cart_item_item_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_constraintTop_toBottomOf="@+id/product_added_to_cart_item_item_price"
                app:layout_constraintStart_toEndOf="@+id/product_added_to_cart_item_item_counter_tv"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="#80727C8E"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/checkout_activity_item_ll"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/_15sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>