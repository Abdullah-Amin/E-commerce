<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_reviews_item_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/product_reviews_item_iv"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:backgroundTint="#B7E6E6"
        android:text="JD"
        android:textSize="@dimen/_17ssp"
        app:cornerRadius="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_5sdp" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/product_reviews_item_rate_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/product_reviews_item_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:rating="3.5"
        android:layout_marginLeft="@dimen/_10sdp" />

    <TextView
        android:id="@+id/product_reviews_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jane doe"
        android:textStyle="bold"
        android:textColor="#515C6F"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@+id/product_reviews_item_rate_bar"
        app:layout_constraintStart_toEndOf="@+id/product_reviews_item_iv"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp" />

    <TextView
        android:id="@+id/product_reviews_item_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jane dodoedoedoedoedoeedodoedoedoedoedoee"
        android:textColor="#515C6F"
        android:textSize="@dimen/_14ssp"
        android:maxWidth="@dimen/_170sdp"
        app:layout_constraintTop_toBottomOf="@+id/product_reviews_item_name_tv"
        app:layout_constraintStart_toEndOf="@+id/product_reviews_item_iv"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp" />

    <TextView
        android:id="@+id/product_reviews_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 oct, 2018"
        android:textStyle="bold"
        android:textColor="#80515C6F"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>