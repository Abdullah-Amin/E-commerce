<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_result_item_image_iv"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/shirt_image"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/search_result_item_name_tv"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/search_result_item_image_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:text="shirtss"
            android:textColor="#515C6F"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp" />

        <TextView
            android:id="@+id/search_result_item_price_tv"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/search_result_item_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="$24.34"
            android:textColor="#515C6F"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_5sdp" />

        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="4.5"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/search_corners"
            android:backgroundTint="#FF6969"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/_5sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>